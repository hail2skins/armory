# The Virtual Armory - Environment Configuration Example
# Copy to .env and replace placeholder values.

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=your-db-host
DB_PORT=5432
DB_DATABASE=your-db-name
DB_USERNAME=your-db-user
DB_PASSWORD=your-db-password
DB_SCHEMA=public
DB_SSLMODE=disable

# ============================================
# Server Configuration
# ============================================
PORT=8080
HOST=0.0.0.0
ENV=development
APP_ENV=development
GO_ENV=development
CORS_ORIGINS=https://your-frontend.example.com
SITE_HOST=https://your-site.example.com
APP_BASE_URL=https://your-frontend.example.com
GIN_MODE=debug

# ============================================
# Authentication & Security
# ============================================
SESSION_SECRET=replace-with-long-random-secret
JWT_SECRET=replace-with-long-random-secret
CASBIN_ADMIN=admin@example.com

# ============================================
# External Services
# ============================================
# Stripe
STRIPE_SECRET_KEY=sk_live_or_sk_test_key
STRIPE_PUBLISHABLE_KEY=pk_live_or_pk_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_MONTHLY=prod_monthly_id
STRIPE_PRICE_YEARLY=prod_yearly_id
STRIPE_PRICE_LIFETIME=prod_lifetime_id
STRIPE_PRICE_PREMIUM_LIFETIME=prod_premium_lifetime_id
STRIPE_IP_FILTER_ENABLED=true
STRIPE_OVERRIDE_SECRET=optional-override-secret

# Mailjet
MAILJET_API_KEY=mailjet_api_key
MAILJET_SECRET_KEY=mailjet_secret_key
MAILJET_SENDER_EMAIL=noreply@example.com
MAILJET_SENDER_NAME=Virtual Armory
ADMIN_EMAIL=admin@example.com

# New Relic
NEW_RELIC_LICENSE_KEY=newrelic_license_key
NEW_RELIC_APP_NAME=armory

# ============================================
# Development & Debugging
# ============================================
DEBUG=false
LOG_LEVEL=info

# ============================================
# Test-only Variables
# ============================================
DB_DRIVER=sqlite
DB_NAME=:memory:
